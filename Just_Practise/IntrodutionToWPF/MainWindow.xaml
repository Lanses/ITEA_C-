<Window x:Class="IntrodutionToWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntrodutionToWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" RenderTransformOrigin="0.496,0.48">
            <Button Click="StartDrawingLines">Draw Line</Button>
            <Button Click="StartDrawingCircles">Draw Circle</Button>
            <Button Click="StartDrawingSquares">Draw Square</Button>
            <Button Click="Clear">Clear</Button>
        </StackPanel>
        <Canvas Grid.Row="1"  
                    Name="MyCanvas"
                    MouseLeftButtonUp="HandleMouseClick"
                Background="WhiteSmoke" Margin="0,0,0,0"/>
    </Grid>
</Window>
